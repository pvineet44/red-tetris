{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "scripts": {
    "start": "node src/server/dist/app.js",
    "install-server": "cd src/server && pwd && yarn install",
    "install-client": "cd src/client && pwd && yarn install",
    "install": "yarn install-server && yarn install-client",
    "clean-server": "cd src/server && pwd && rm -rf node_modules",
    "clean-client": "cd src/client && pwd && rm -rf node_modules",
    "clean": "yarn clean-server && yarn clean-client",
    "clean-install": "yarn clean && yarn install",
    "test-server": "cd src/server && echo TESTING SERVER && yarn test",
    "test-client": "cd src/client && echo TESTING CLIENT && yarn test",
    "test": "yarn test-server && yarn test-client", 
    "hello": "echo hello",
    "eslint": "eslint src",
    "client-dist": "NODE_ENV=production webpack --progress --colors",
    "client-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080",
    "srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
    "coverage": "NODE_ENV=test nyc --include src --all -r text -r lcov -r text --require babel-core/register mocha "
  },
  "nyc": {
    "exclude": [
      "build"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  }
}
